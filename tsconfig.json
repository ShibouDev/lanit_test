{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "outDir": "build",
      "baseUrl": ".",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
    }
  }
